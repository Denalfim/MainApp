<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import java.net.URL?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <stylesheets>
        <URL value = "@/css/style.css"/>
    </stylesheets>
    <Button fx:id="go" text="Отправить" GridPane.rowIndex="2" GridPane.columnIndex="1" onAction="#clicBtn1"/>
    <Button fx:id="clea" text="Очистить" GridPane.rowIndex="0" GridPane.columnIndex="0" onAction="#clicBtn2"/>
    <TextArea fx:id="areaText" GridPane.rowIndex="1" GridPane.columnIndex="0" prefWidth="300" editable="false"/>
    <TextField fx:id="fieldText" GridPane.rowIndex="2" GridPane.columnIndex="0" promptText="Введите сообщение" onKeyPressed="#keyPress"/>
</GridPane>
